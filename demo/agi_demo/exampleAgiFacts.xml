<?xml-model href="./FactDictionaryModule.rng"?>
<FactDictionaryModule>
  <Facts>
    <Fact path="/totalAdjustedGrossIncome">
        <Name>Total Adjusted Gross Income</Name>
        <Description>Sum of all income sources minus adjustments</Description>
        <Derived>
            <Subtract>
            <Minuend>
                <Add>
                    <Dependency path="/totalWages" />
                    <Dependency path="/totalInterestIncome" />
                    <Dependency path="/total1099Income" />
                </Add>
            </Minuend>
            <Subtrahends>
                <Dependency path="/totalAdjustments" />
            </Subtrahends>
            </Subtract>
        </Derived>
    </Fact>

    <Fact path="/totalWages">
        <Name>Total Wages</Name>
        <Description>Total Wages earned in tax year</Description>
        <Writable>
            <Dollar/>
        </Writable>
    </Fact>

    <Fact path="/totalInterestIncome">
        <Name>Total Interest Income</Name>
        <Description>Total Interest Income earned in tax year</Description>
        <Writable>
            <Dollar/>
        </Writable>
    </Fact>

    <Fact path="/total1099Income">
        <Name>Total 1099 Income</Name>
        <Description>Total 1099 Income earned in tax year</Description>
        <Writable>
            <Dollar/>
        </Writable>
    </Fact>
    
    <Fact path="/totalAdjustments">
        <Name>Total Adjustments</Name>
        <Description>Total Adjustments for in tax year</Description>
        <Writable>
            <Dollar/>
        </Writable>
    </Fact>

    <Fact path="/yearOfBirth">
      <Name>Year of birth</Name>
      <Description>The year of birth of the filer.</Description>

      <Writable>
        <Int />
        <Limit type="Max">
          <Int>2025</Int>
        </Limit>
      </Writable>
    </Fact>

    <Fact path="/taxYear">
      <Name>Tax year</Name>
      <Description>The tax year of the return.</Description>
      <TaxYear>2025</TaxYear>

      <Derived>
        <Int>2025</Int>
      </Derived>
    </Fact>

    <Fact path="/age">
      <Name>Age</Name>
      <Description>The age of the filer.</Description>

      <Derived>
        <Subtract>
          <Minuend>
            <Dependency path="/taxYear" />
          </Minuend>
          <Subtrahends>
            <Dependency path="/yearOfBirth/" />
          </Subtrahends>
        </Subtract>
      </Derived>
    </Fact>

    <Fact path="/age16OrOlder">
      <Name>Age 16 or older</Name>
      <Description>
        Whether the filer is 16 or older. 
      </Description>

      <Derived>
        <GreaterThanOrEqual>
          <Left>
            <Dependency path="/ageCalculatedByYear" />
          </Left>
          <Right>
            <Int>16</Int>
          </Right>
        </GreaterThanOrEqual>
      </Derived>
    </Fact>

    <Fact path="/ageCalculatedByYear">
      <Name>Age</Name>
      <Description>The age of the filer, calcualted using their birthday as the day before their
        date of birth.</Description>

      <Derived>
        <Subtract>
          <Minuend>
            <Dependency path="/taxYear" />
          </Minuend>
          <Subtrahends>
            <Dependency path="/yearOfBirth" />
          </Subtrahends>
        </Subtract>
      </Derived>
    </Fact>
   
    <Fact path="/isUsCitizen">
        <Name> Is Us Citizen </Name>
        <Description> If the filer is a US citizen </Description>
        <Writable>
            <Boolean/>
        </Writable>
    </Fact>

    <Fact path="/eligibleForDirectFile">
        <Name>Eligible To File Taxes in the US</Name>
        <Description> If the filer is a US citizen and </Description>
        <Derived>
            <Any>
                <Dependency path="/age16OrOlder" />
                <Dependency path="/isUsCitizen" />
            </Any>
        </Derived>
    </Fact>

    <Fact path="/dateOfBirth">
      <Name>Date of Birth</Name>
      <Description>Taxpayers DOB</Description>
      <Writable>
        <Day/>
      </Writable>
    </Fact>

    <Fact path="/filingDeadline2026">
      <Name>Filing Deadline TY2025</Name>
      <Description>Filing deadline for TY20205</Description>
      <Writable>
        <Day/>
      </Writable>
    </Fact>

    <Fact path="/ageAtDeadline2026">
      <Name></Name>
      <Description>The age of the filer at the filing deadline, calculated poorly</Description>

      <Derived>
        <Subtract>
          <Minuend>
            <Dependency path="/filingDeadline2026/year" />
          </Minuend>
          <Subtrahends>
            <Dependency path="/dateOfBirth/year" />
          </Subtrahends>
        </Subtract>
      </Derived>
    </Fact>   
  </Facts>
</FactDictionaryModule>
